<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/imagecarousel/db" VERSION="20240401" COMMENT="XMLDB file for Moodle mod/imagecarousel" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">
    <TABLES>
        <TABLE NAME="imagecarousel" COMMENT="Almacena la información de los carruseles de imágenes">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="availablefrom" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Fecha/hora desde la que el carrusel es visible (timestamp)"/>
                <FIELD NAME="availableuntil" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Fecha/hora hasta la que el carrusel es visible (timestamp)"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="course" TYPE="foreign" FIELDS="course" REFTABLE="course" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="imagecarousel_images" COMMENT="Almacena las imágenes para cada carrusel">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="carouselid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID del carrusel al que pertenece esta imagen"/>
                <FIELD NAME="desktop_image" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Imagen para escritorio en formato base64"/>
                <FIELD NAME="mobile_image" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Imagen para móvil en formato base64"/>
                <FIELD NAME="desktop_image_name" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="Nombre original del archivo de imagen para escritorio"/>
                <FIELD NAME="mobile_image_name" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="Nombre original del archivo de imagen para móvil"/>
                <FIELD NAME="url" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="URL al hacer clic en la imagen"/>
                <FIELD NAME="text" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Texto a mostrar sobre la imagen"/>
                <FIELD NAME="text_color" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false" COMMENT="Color del texto"/>
                <FIELD NAME="text_color_opacity" TYPE="int" LENGTH="3" NOTNULL="false" DEFAULT="100" SEQUENCE="false" COMMENT="Opacidad del color del texto (0-100)"/>
                <FIELD NAME="text_size" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Tamaño del texto"/>
                <FIELD NAME="text_position" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Posición predefinida del texto"/>
                <FIELD NAME="text_position_top" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Ajuste personalizado - top"/>
                <FIELD NAME="text_position_right" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Ajuste personalizado - right"/>
                <FIELD NAME="text_position_bottom" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Ajuste personalizado - bottom"/>
                <FIELD NAME="text_position_left" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Ajuste personalizado - left"/>
                <FIELD NAME="text_style_bold" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Si el texto está en negrita"/>
                <FIELD NAME="text_style_italic" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Si el texto está en cursiva"/>
                <FIELD NAME="text_style_underline" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Si el texto está subrayado"/>
                <FIELD NAME="text_url" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="URL al hacer clic en el texto"/>
                <FIELD NAME="text_background" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false" COMMENT="Color de fondo del texto"/>
                <FIELD NAME="text_background_opacity" TYPE="int" LENGTH="3" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Opacidad del fondo del texto (0-100)"/>
                <FIELD NAME="text_padding" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Relleno del texto"/>
                <FIELD NAME="text_border_radius" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Radio del borde del texto"/>
                <FIELD NAME="sortorder" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Orden de visualización"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="carouselid" TYPE="foreign" FIELDS="carouselid" REFTABLE="imagecarousel" REFFIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB> 