@startuml Slider Use Cases

' Estilos
skinparam actorStyle awesome
skinparam packageStyle rectangle

' Actores
actor "Administrador" as admin
actor "Usuario" as user
actor "Sistema" as system

' Paquetes
package "Gestión del Slider" {
    ' Casos de uso para administrador
    usecase "Gestionar Imágenes" as UC1
    usecase "Subir Imágenes" as UC2
    usecase "Actualizar Imágenes" as UC3
    usecase "Eliminar Imágenes" as UC4
    usecase "Ordenar Imágenes" as UC5
    usecase "Activar/Desactivar Imágenes" as UC6
    
    ' Casos de uso para sistema
    usecase "Validar Sesión" as UC7
    usecase "Validar Permisos" as UC8
    usecase "Validar Imágenes" as UC9
    usecase "Gestionar Caché" as UC10
}

package "Visualización del Slider" {
    ' Casos de uso para usuario
    usecase "Ver Slider" as UC11
    usecase "Navegar Imágenes" as UC12
    usecase "Ver Imágenes Responsivas" as UC13
}

' Relaciones con el administrador
admin --> UC1 : <<include>>
admin --> UC2 : <<include>>
admin --> UC3 : <<include>>
admin --> UC4 : <<include>>
admin --> UC5 : <<include>>
admin --> UC6 : <<include>>

' Relaciones con el sistema
system --> UC7 : <<include>>
system --> UC8 : <<include>>
system --> UC9 : <<include>>
system --> UC10 : <<include>>

' Relaciones con el usuario
user --> UC11 : <<include>>
user --> UC12 : <<include>>
user --> UC13 : <<include>>

' Relaciones entre casos de uso
UC1 ..> UC7 : <<include>>
UC1 ..> UC8 : <<include>>
UC1 ..> UC9 : <<include>>
UC1 ..> UC10 : <<include>>

UC2 ..> UC7 : <<include>>
UC2 ..> UC8 : <<include>>
UC2 ..> UC9 : <<include>>

UC3 ..> UC7 : <<include>>
UC3 ..> UC8 : <<include>>
UC3 ..> UC9 : <<include>>

UC4 ..> UC7 : <<include>>
UC4 ..> UC8 : <<include>>

UC5 ..> UC7 : <<include>>
UC5 ..> UC8 : <<include>>

UC6 ..> UC7 : <<include>>
UC6 ..> UC8 : <<include>>

UC11 ..> UC10 : <<include>>
UC12 ..> UC10 : <<include>>
UC13 ..> UC10 : <<include>>

' Notas
note right of UC1
  Permite gestionar todas las
  operaciones CRUD de imágenes
end note

note right of UC9
  Valida formato, tamaño y
  contenido de las imágenes
end note

note right of UC10
  Optimiza el rendimiento
  mediante sistema de caché
end note

note right of UC13
  Muestra imágenes adaptadas
  según el dispositivo
end note

@enduml 