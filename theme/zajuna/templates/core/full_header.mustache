{{!
    @template core/full_header

    This template renders the header.

    Example context (json):
    {
        "contextheader": "context_header_html",
        "hasnavbar": false,
        "navbar": "navbar_if_available",
        "courseheader": "course_header_html",
        "welcomemessage": "welcomemessage"
    }
}}
<header id="page-header" class="d-flex flex-column">
        {{{contextheader}}}
        {{#headeractions}}
            <div class="header-actions-container d-flex justify-content-center" data-region="header-actions-container">
                <div class="header-action">{{{.}}}</div>
            </div>
        {{/headeractions}}
        <div class="d-flex justify-content-center p-3 flex-wrap">
            {{#hasnavbar}}
            <div id="page-navbar" class="font-weight-bold text-alternate-background">
                {{{navbar}}}
            </div>
            {{/hasnavbar}}
            <div class="d-flex">
                {{{pageheadingbutton}}}
            </div>
            <div id="course-header">
                {{{courseheader}}}
            </div>
        </div>
        {{> core/welcome }}
</header>
